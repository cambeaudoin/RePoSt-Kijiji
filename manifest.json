{
  "manifest_version": 2,
  "name": "Kijiji RePoStEr",
  "version": "1.0",

  "default_locale": "en",
  "description": "This extension will allow you to repost your Kijiji ad quickly",


  "content_scripts": [
      {
          "matches": [
              "https://www.kijiji.ca/m-my-ads.html"
          ],
          "js": [
              "content.js",
              "underscore-min.js"
          ]
      }
  ],

  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },

  "permissions": [
    "activeTab",
    "http://www.kijiji.ca/*"
  ]
}